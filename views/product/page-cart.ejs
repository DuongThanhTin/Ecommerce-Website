<%- include('../includes/head.ejs') %>

<body class="animsition">
	
	<%- include('../includes/header.ejs') %>
	<%- include('../includes/cart-r-side.ejs') %>	


		

	<!-- Shoping Cart -->
	<form class="bg0 p-t-75 p-b-85" action="/updatecart" method="POST">
		<div class="container">
			<div class="row">
				<div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
					<div class="m-l-25 m-r--38 m-lr-0-xl">
						<div class="wrap-table-shopping-cart">
							<table class="table-shopping-cart">
								<tr class="table_head">
									<th class="column-1">Product</th>
									<th class="column-2">Name</th>
									<th class="column-3">Price</th>
									<th class="column-4">Quantity</th>
									<th class="column-5">Total</th>
								</tr>

								<% if (products.length > 0) { %>
									<% products.forEach(item => { %>
										<tr class="table_row">
											<td class="column-1">
												<div class="how-itemcart1">
													<img src="<%= item.productId.imagePath %>" alt="IMG">
												</div>
											</td>
											<td class="column-2"><%= item.productId.productname %></td>
											<td class="column-3 num-price" name="priceNumber" id="priceNumber">$<%= item.productId.price %></td>

											<td class="column-4">
												<div class="wrap-num-product flex-w m-l-auto m-r-0">
													<div class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m">
														<i class="fs-16 zmdi zmdi-minus"></i>
													</div>

													<input class="mtext-104 cl3 txt-center num-product" type="number" name="productNum" id="productNum" value="<%= item.quantity %>">

													<div class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m">
														<i class="fs-16 zmdi zmdi-plus"></i>
													</div>
													
													<input type="hidden" name="productId" value="<%= item.productId._id %>">
												</div>
											</td>

											<td class="column-5 total-prod">$<%= item.quantity * item.productId.price %></td>
										</tr>
										
									<% }) %>
								<% } %>

							</table>
						</div>
						
						<div class="flex-w flex-sb-m bor15 p-t-18 p-b-15 p-lr-40 p-lr-15-sm">
							<div class="flex-w flex-m m-r-20 m-tb-5">							
							</div>

							<div class="flex-c-m stext-101 cl2 size-119 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-10 translate">
								<button type="submit" name="btnUpdateCart" value="1" style="width: 100%; height: 100%">
										Update Cart
								</button>
							</div>	
						</div>
					</div>
				</div>

				<div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
					<div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">
						<h4 class="mtext-109 cl2 p-b-30 translate">
							Cart Totals
						</h4>

						<div class="flex-w flex-t bor12 p-b-13">
							<div class="size-208">
								<span class="stext-110 cl2 translate">
									Subtotal:
								</span>
							</div>

							<div class="size-209">
								<span class="mtext-110 cl2">
									$ <%= sum %>
								</span>
							</div>
						</div>

						<div class="flex-w flex-t bor12 p-t-15 p-b-30">
							<div class="size-208 w-full-ssm">
								<span class="stext-110 cl2 translate">
									Shipping:
								</span>
							</div>

							<div class="size-209 p-r-18 p-r-0-sm w-full-ssm">
								<p class="stext-111 cl6 p-t-2 translate">
									There are no shipping methods available. Please double check your address, or contact us if you need any help.
								</p>
								
								<div class="p-t-15">
									<span class="stext-112 cl8 translate">
										Calculate Shipping
									</span>

									<div class="rs1-select2 rs2-select2 bor8 bg0 m-b-12 m-t-9">
										<select class="js-select2" name="time">
											<option class="translate">Select a country...</option>
											<option>USA</option>
											<option>UK</option>
											<option>VIE</option>
										</select>
										<div class="dropDownSelect2"></div>
									</div>

									<div class="bor8 bg0 m-b-12">
										<input class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" name="state" placeholder="State /  country">
									</div>
									<div class="flex-w">
										
									</div>
										
								</div>
							</div>
						</div>

						<div class="flex-w flex-t p-t-27 p-b-33">
							<div class="size-208">
								<span class="mtext-101 cl2 translate">
									Total:
								</span>
							</div>

							<div class="size-209 p-t-1">
								<span class="mtext-110 cl2">
									$ <%= sum %>
								</span>
							</div>
						</div>

						<button class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer translate" type="submit" name="btnCheckout" value="1">
							Proceed to Checkout
						</button>
					</div>
				</div>
				
			</div>
		</div>
	</form>
		
	<%- include('../includes/footer.ejs') %>

	<!-- Back to top -->
	<div class="btn-back-to-top" id="myBtn">
			<span class="symbol-btn-back-to-top">
				<i class="zmdi zmdi-chevron-up"></i>
			</span>
	</div>
		
	<%- include('../includes/modal.ejs') %>
<%- include('../includes/end.ejs') %>
