	var AddToCart = (function(){
		var getQuantityOfProduct = function() {
			var result = $('#pQuantity').val();
			return result;
		};
		var plusProduct = function() {
			var num = getQuantityOfProduct() + 1;
			$('#pQuantity').val(num);
			console.log("Number of product after plus: " + num);
		};

		var minusProduct = function() {
			var num = getQuantityOfProduct() - 1;
			$('#pQuantity').val(num);
			console.log("Number of product after minus: " + num);
		};
		return
	}());
</script>