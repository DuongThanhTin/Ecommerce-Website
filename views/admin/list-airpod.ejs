<!DOCTYPE html>
<%- include("../includes/head.ejs")%>
<%- include('../admin/header-admin.ejs') %>
<html>

<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/css/main.css">"
    <title>Manager Airpods</title>
</head>
<div class="p-b-10">
    <h3 class="ltext-103 cl5">
        <div class="translate">Manager Airpods</div>
    </h3>
</div>

<body>
    <div class="product-status mg-tb-15">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="product-status-wrap">
                        <div class="tilteList">
                        <h4>Airpod List</h4>
                        </div>
                        <div class="add-product">
                            <!-- <a href="/admin/edit-user">Add user</a> -->
                        </div>
                        <div class="table-wrapper">
                            <table class="list">
                                <colgroup>
                                    <col class="col-01">
                                    <col class="col-02">
                                    <col class="col-03">
                                    <col class="col-04">
                                    <col class="col-05">
                                    <col class="col-06">
                                </colgroup>
                                <thead>
                                    <tr>
                                        <th> Product Name</th>
                                        <th> Description</th>
                                        <th>Price ($)</th>
                                        <th>Image Path</th>
                                        <th>Created</th>
                                        <th>Edit</th>
                                    </tr>
                                </thead>
                                <% var i =0 %>
                                <form method="POST" action="/adminTin/managerusers/delete">

                                    <% listairpods.forEach(function (airpod) { %>
                                    <tbody>
                                        <tr>
                                            <input type="hidden" value="<%= airpod._id %>" name="_id" id="_id">
                                            <td name="productname" id="productname"> <%= airpod.productname %></td>
                                            <td><%= airpod.description %></td>
                                            <td><%= airpod.price %></td>
                                            <td ><%= airpod.imagePath %></td>
                                            <td><%= airpod.created%></td>
                                            <td style="width: 30px"> <a href="../adminTin/managerairpod/update/<%= airpod._id %>"
                                                    data-toggle="tooltip" data-placement="top" title="Edit">
                                                    <span class="glyphicon glyphicon-edit"></span>
                                                </a>
                                                <a href="../adminTin/managerairpod/delete/<%= airpod._id %>"
                                                    data-toggle="tooltip" data-placement="top" title="Delete">
                                                    <span class="glyphicon glyphicon-trash"></span>
                                                </a>
                                            </td>
                                        </tr>
                                    </tbody>
                                    <% airpod.count =i%>
                                    <% airpod.count = airpod.count+1 %>

                                    <% i     = airpod.count %>

                                    <%  }) %>

                                </form>
                            </table>
                        </div>
                        <div class="Sum">
                            Tổng số sản phẩm Airpods là: <%= i %>
                        <div>
                    </div>
                </div>
            </div>
        </div>
</div>
                <!-- Map -->
                <div class="map">
                    <div class="size-303" id="google_map" data-map-x="40.691446" data-map-y="-73.886787"
                        data-pin="images/icons/pin.png" data-scrollwhell="0" data-draggable="1" data-zoom="11"></div>
                </div>

                <%- include('../includes/footer.ejs') %>

                <!-- Back to top -->
                <div class="btn-back-to-top" id="myBtn">
                    <span class="symbol-btn-back-to-top">
                        <i class="zmdi zmdi-chevron-up"></i>
                    </span>
                </div>
                <%- include('../includes/end.ejs') %>
</body>

</html>