<!DOCTYPE html>
<%- include("../includes/head.ejs")%>
<%- include('../admin/header-admin.ejs') %>
<html>
    <head>
        <meta charset="utf-8">
        <title>Manager Users</title>
    </head>
    <div class="p-b-10">
            <h3 class="ltext-103 cl5">
                <div class="translate">Manager Users</div>
            </h3>
        </div>
    <body>
            <div class="product-status mg-tb-15">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="product-status-wrap">
                                    <h4>Users List</h4>
                                    <div class="add-product">
                                        <!-- <a href="/admin/edit-user">Add user</a> -->
                                    </div>
                                    <div class="table-responsive">
        <table class="table table-bordered">
            <tr>
                <td> Username</td>
                <td> Age</td>
                <td>Phone</td>
                <td>Role</td>
                <td>Created</td>
                <td>Function Update</td>
                <td>Function Delete</td>
            </tr>
            <% var i =0 %>
            <form method="POST" action="/adminTin/managerusers/delete">
            <% listusers.forEach(function (user) { %>
            <tr>
                    <input type="hidden" value="<%= user._id %>" name="_id" id="_id">
                    <td name="username" id ="username"> <%= user.username %></td>
                    <td> <%= user.age %></td>
                    <td><%= user.phone %></td>
                    <td><%= user.role %></td>
                    <td><%= user.created%></td>     
                    <td>   <a href="../adminTin/managerusers/update/<%= user._id %>" class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5 translate">
                        Update
                    </a></td>
                    <td>   <a  href="../adminTin/managerusers/delete/<%= user._id %>" class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5 translate">
                        Delete
                    </a></td>
            </tr>
            <% user.count =i %>
            <% user.count = user.count+1 %>
            <% i = user.count %>
            <% }) %>
            </form>
        </table>
        <h2 class="ltext-105 cl0 txt-center " style ='color:brown'>
            Tổng số user là: <%= i %>
     </h2>
        </div>
    </div>
</div>
</div>
</div>
</div>
	
	<!-- Map -->
