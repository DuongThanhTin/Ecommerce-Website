<%- include('../includes/admin-head.ejs') %>
<%- include('../includes/head.ejs') %>
<body class="animsition">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-6 uxa-form-group mt-5">

                <h1 class="text-center mt-5 mb-2">YOUR ACCOUNT</h1>
                <!-- single sentence description -->
                <p class="lead text-center"><%= user.username %></p>
                <!-- /single sentence description -->

                <div class="uxa-user-avatar">
                    <img class="avatar"
                        src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRw_YH9cRRgw-4HkfvHENsN_k92lWOZCZbVAAYAooPZi92KROIOWQ&s"
                        alt="User avatar">
                </div>


                <form class="mt-5 mb-5">

                    <div class="form-group">
                        <label for="exampleInputEmail1">Your Email Address<span>*</span></label>
                        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                            placeholder="Enter email" value="<%= user.email %>" aria-hidden="true" readonly>
                        <small id="emailHelp" class="form-text text-muted">We'll never share or spam your email
                            address.</small>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputName">User Name</label>
                        <input type="text" name="username" id="username" class="form-control" placeholder="username"
                            value="<%= user.username %>" readonly>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputAge">Age</label>
                        <input type="text" name="age" id="age" class="form-control" placeholder="age"
                            value="<%= user.age %>">
                    </div>

                    <div class="form-group">
                        <label for="exampleInputPhone">Phone</label>
                        <input type="text" name="Phone" id="Phone" class="form-control" placeholder="phone"
                            value="<%= user.phone %>">
                    </div>

                    <div class="form-group">
                        <label for="exampleInputAddress">Address</label>
                        <input type="text" name="address" id="address" class="form-control" placeholder="Address"
                            value="<%= user.address %>">
                    </div>

                    <div class="form-group">
                        <label for="exampleInputRole">Role</label>
                        <input type="text" name="role" id="address" class="form-control" placeholder="Role"
                            value="<%= user.role  %>" readonly>
                    </div>

                </form>
                <div class="row">
                    <div class="col-lg-12">
                    <div class="button-update">
                        <div class="product-edt-save" >

                            <button type="submit" class="btn btn-danger waves-effect waves-light">Save
                                <i class="fa fa-upload" aria-hidden="true"></i>
                            </button>
                            </form>
                        </div>
                        <div class="product-edt-remove" >
                            <form method="POST" action="/adminTin/remove-user/<%= user._id %>">
                                <button type="submit" class="btn btn-danger waves-effect waves-light">Remove
                                    <i class="fa fa-times " aria-hidden="true"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                    </div>
                </div>
            </div>
        </div>
</div>


<!-- Map -->
<div class="map">
    <div class="size-303" id="google_map" data-map-x="40.691446" data-map-y="-73.886787" data-pin="images/icons/pin.png"
        data-scrollwhell="0" data-draggable="1" data-zoom="11"></div>
</div>

<%- include('../includes/footer.ejs') %>

<!-- Back to top -->
<div class="btn-back-to-top" id="myBtn">
    <span class="symbol-btn-back-to-top">
        <i class="zmdi zmdi-chevron-up"></i>
    </span>
</div>


<%- include('../includes/end.ejs') %>