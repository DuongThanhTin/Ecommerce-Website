<!DOCTYPE html>
<%- include("../includes/head.ejs")%>
<%- include('../admin/header-admin.ejs') %>
<html>

<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/css/admin-list.css">

</head>
<div class="p-b-10 p-t-50">
    <h3 class="ltext-103 cl5">
        <div class="translate">Manager Order</div>
    </h3>
</div>
<form method="POST" action="/adminTin/managerorder" style="display: flex; justify-content:center">
    <div class="rs1-select2 bor8 bg0 option-category" style="width:100px;margin-right:85px">
        <select id="menu-category" style="width:100%; height: 30px; " class="js-select2 menu-category" name="time" onchange="menucategory()">
            <option>2017</option>
            <option>2018</option>
            <option>2019</option>
            <option>2020</option>
        </select>
        <div class="dropDownSelect2"></div>
    </div>

    <div class=" bor8 m-b-20 how-pos4-parent">                 
        <input type="hidden" class="stext-110 cl2 plh3 size-112 p-l-10 p-r-10 w-full" name="year"
        id="year" required readonly>
    </div>
    <button type="submit" class="flex-c-m stext-101 cl0  bg3 bor1 hov-btn3 p-lr-15 trans-04 pointer">
        View order
    </button>
</form>
<body>
    <div class="bodyList">
        <div class="product-status mg-tb-15">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="product-status-wrap">
                            <div class="add-product">
                                <!-- <a href="/admin/edit-user">Add user</a> -->
                            </div>
                            <div class="table-wrapper">
                                <table class="list">
                                    <colgroup>
                                        <col class="col-01">
                                        <col class="col-02">
                                        <col class="col-03">
                                        <col class="col-04">
                                        <col class="col-05">
                                        <col class="col-06">
                                    </colgroup>
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Created Order</th>
                                            <th>Quantity</th>
                                            <th>Mobile</th>
                                            <th>Address</th>
                                          
                                        </tr>
                                    </thead>
                                    <% var i =0 %>
                                
                                        <% listorder.forEach(function (orderProduct) { %>
                                            <% var js=JSON.parse(JSON.stringify(orderProduct.productNewOrder.order)) %>
                                       
                                        <tbody>
                                            <tr>
                                                 <input type="hidden" value="<%= orderProduct._id %>" name="_id" id="_id">
                                                 <td > 
                                                    <div class="flex-c-m">
                                                        <%= orderProduct.productNewOrder.fullname %>
                                                    </div>
                                                </td=>

                                                <td > 
                                                    <div class="flex-c-m">
                                                        <%= orderProduct.productNewOrder.createdOrder %>
                                                    </div>
                                                </td>
                                                <td> 
                                                    <div class="flex-c-m">
                                                        <%= js[0].sum%>
                                                    </div>
                                                </td>
                                                <td> 
                                                    <div class="flex-c-m">
                                                        <%= orderProduct.productNewOrder.mobilenumber%>
                                                    </div>
                                                </td>
                                   
                                                <td> 
                                                    <div class="flex-c-m">
                                                        <%= orderProduct.productNewOrder.address%>
                                                    </div>
                                                </td>
                                            
                                            </tr>
                                        </tbody>
                                        <% orderProduct.count =i %>
                                        <% orderProduct.count = orderProduct.count+1 %>
                                        <% i = orderProduct.count %>
                                        <% }) %>
                                 
                                </table>
                            </div>
                            <div class="Sum">
                                Tổng số Order là: <%= i %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Back to top -->
        <div class="btn-back-to-top" id="myBtn">
            <span class="symbol-btn-back-to-top">
                <i class="zmdi zmdi-chevron-up"></i>
            </span>
        </div>
    </div>

</body>

<script>
    menucategory = ()=>{
        var id = document.getElementById("menu-category");
        var displaytext = id.options[id.selectedIndex].text;
        document.getElementById("year").value = displaytext;
    }
</script>
</html>